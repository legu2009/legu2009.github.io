footer
    height: $x(120)
    background-color: #19a6db
    font-size: $x(24)
    color: #fff
    text-align: center
    padding-top: $x(40)
    div
        height: $x(46)
        line-height: $x(46)
    .company-tel
        display: inline-block
        background: url(images/tel.png) no-repeat left $x(5)
