        height: $x(100)
        padding: $x(35) 0
    .info-desc
        height: $x(35)
        line-height: $x(35)
        font-size: $x(30)
    .info-title
        height: $x(65)
        font-size: $x(28)
        font-family: "PingFang SC";
    .title
