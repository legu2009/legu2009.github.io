.fixed-nav
    height: $x(90)
    line-height: $x(90)
    font-size: $x(30)
    color: #666
    text-align: center
    background-color: #f9f9f9
    margin-bottom: $x(15)
    position: relative
    background-color: #fff
    position: fixed;
    top: $x(88)
    left: 0
    right: 0
    z-index: 2
    .nav-item
        width: 25%
        float: left
    .sel
        color: #19a6db;
    .nav-bottom
        position: absolute
        left 0
        bottom: 0
        width: 25%
        height: 0
        border-top: 2px solid #19a6db;
        transition: left .3s;
        -moz-transition: left .3s;
        -webkit-transition: left .3s;
        -o-transition: left .3s;
.bond-item
    border-bottom: 1px solid #e3e3e3;
    border-top: 1px solid #e3e3e3;
    background-color: #fff
    margin-bottom: $x(15)
    .title
        height: $x(64)
        line-height: $x(64)
